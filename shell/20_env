# shell/env
#  Just your friendly neighbourhood environment variables

# rbenv
export RBENV_ROOT=/usr/local/var/rbenv

# Path
export PATH=~/bin:/opt/ec2/bin:/usr/local/bin:$PATH

# Sublime text as editor
export EDITOR=subl

# VIM as git editor
export GIT_EDITOR=vim

# Java (ugh)
export JAVA_HOME=`/System/Library/Frameworks/JavaVM.framework/Versions/Current/Commands/java_home`

# Require Ctrl-D to be invoked *twice* to logout from a shell
export IGNOREEOF=1

# Pretty colours!
export TERM=xterm-256color
